@model IEnumerable<CustomerManagement.Entities.Address>

@{
    ViewBag.Title = "Addresses";
}

<h2>Addresses of Customer @ViewBag.CustomerName</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { customerId = ViewBag.CustomerId})
</p>
<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressLine2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th></th>
    </tr>
    @{ int i = 1;}
@foreach (var item in Model) {
    <tr>
        <td>
            @i
            @{ i++;}
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressLine)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressLine2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { addressId=item.AddressId }) |
            @Html.ActionLink("Delete", "Delete", new { addressId = item.AddressId })
        </td>
    </tr>
}

</table>
