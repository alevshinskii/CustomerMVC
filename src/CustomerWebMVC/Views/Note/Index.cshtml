@model IEnumerable<CustomerManagement.Entities.Note>

@{
    ViewBag.Title = "Notes";
}

<h2>Notes of Customer @ViewBag.CustomerName</h2>

<p>
    @Html.ActionLink("Create New Note", "Create", new { customerId = ViewBag.CustomerId })
</p>
<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>
    @{ int i = 1;}
@foreach (var item in Model) {
    <tr>
        <td>
            @i
            @{ i++;}
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
